<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/customToast"
    android:background="@drawable/border_radius">

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/upperTextView" android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Ridder Says..."
        android:gravity="center"
        android:textColor="@android:color/black">
    </TextView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:src="@mipmap/pocket_logo"
        android:layout_below="@+id/upperTextView"
        android:layout_margin="5dip"
        android:id="@+id/imageView">
    </ImageView>

    <TextView
        android:id="@+id/bottomTextView"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="You liked the entry!"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:textColor="@android:color/black">
    </TextView>
</RelativeLayout>